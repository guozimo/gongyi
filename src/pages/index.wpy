<script>
  import wepy from 'wepy'
  import {timestampToTime} from '@/utils/util'
  export default class Index extends wepy.page {
    onShareAppMessage() {
      return {
        title: '为公公益是你我的家园!',
        imageUrl: 'http://39.105.91.188/static/image/fm.jpg',
        path: `/pages/index`
      }
    }
    config = {
      navigationBarTitleText: '圈子'
    }
    components = {
    }

    data = {
      openId: wx.getStorageSync('openId') || '',
      // feedObj: {
      //   'contents': [{
      //     '_id': '5e6449f21c86150e47a2d31c',
      //     'publishTime': 1583630834865,
      //     'openId': '1',
      //     'name': 'weidong',
      //     'headImg': 'https://wx.qlogo.cn/mmopen/vi_32/Q0j4TwGTfTIPV2S8CfAd8AodjiacVHtibGOz9a5BQVsKIvNorQjonGiamPAU2Zzk5SH9kVJH1yv4rR4IM2M7AplfQ/132',
      //     '__v': 0,
      //     'zan': [{'openId': 'x9ks8a7wsic47jvq', 'name': '白安'}],
      //     'imgUrls': ['http://39.105.91.188/static/image/fm.jpg']
      //   }, {
      //     '_id': '5e637c56da556a841bd0d643',
      //     'publishTime': 1583578198091,
      //     'text': '调用接口',
      //     'openId': 'b9iqatg0uq9nj78d',
      //     'name': '忆丹',
      //     'headImg': 'https://wx.qlogo.cn/mmopen/vi_32/Q0j4TwGTfTIPV2S8CfAd8AodjiacVHtibGOz9a5BQVsKIvNorQjonGiamPAU2Zzk5SH9kVJH1yv4rR4IM2M7AplfQ/132',
      //     '__v': 0,
      //     'zan': [],
      //     'imgUrls': ['http://39.105.91.188/static/image/fm.jpg']
      //   }]
      // },
      feedObj:{contents:[]},
      code:'',
      photoWidth: wx.getSystemInfoSync().windowWidth / 5,
      popTop: 0, // 弹出点赞评论框的位置
      popWidth: 0, // 弹出框宽度
      userName: wx.getStorageSync('userInfo').nickName || '',
      baseUrl: 'http://39.105.91.188:8000/api'

    }

    computed = {
    }

    methods = {
      gotoweb() {
        wepy.navigateTo({
          url: '/pages/active/active'
        })
      },
      changeStatus(index) {
      // 切换状态
       this.feedObj.contents[index].isShow= false
       // 请求点赞或者取消点赞的接口
       // 如果当前是已经点赞状态 那么用户是登录状态 点击进行取消点赞 发送取消点赞的请求
       // 如果当前是未点赞状态 那么用户是未登录或者已经登录还未点赞
       if(this.feedObj.contents[index].hasZan){
         // 已经对某条数据进行了点赞 //发送取消点赞的请求
          wx.request({
              url: this.baseUrl + '/zan',
              method: 'POST',
              data: {
                _id:this.feedObj.contents[index]._id || '',
                opera: "delete",
                openid:wx.getStorageSync('openId') || '',
                code: '',
                name:wx.getStorageSync('userInfo').nickName || '💗'
              },
              header: {
                'Content-Type': 'application/json'
              },
              success: res => {
                  console.log('取消点赞返回的数据res', res)
                  if(res.data.status){
                 wepy.showToast({
                  title: '取消点赞成功',
                  icon: 'none',
                  duration: 3000
                })
                // zan 列表中把自己的名字本地除去
                let len = this.feedObj.contents[index].zan.length-1
                this.feedObj.contents[index].zan.splice(len,1)
                this.feedObj.contents[index].hasZan = !this.feedObj.contents[index].hasZan
                  } else {
                  wepy.showToast({
                  title: '取消点赞失败',
                  icon: 'none',
                  duration: 3000
                })
                }
                this.$apply()
              },
              fail: error => {
                console.log('取消点赞失败', error)
                // mock的数据
                // let len = this.feedObj.contents[index].zan.length-1
                // this.feedObj.contents[index].zan.splice(len,1)
                // this.$apply()
                wepy.showToast({
                  title: '取消点赞失败',
                  icon: 'none',
                  duration: 3000
                })
              }
            })
       } else {
         // 未登录或者登录未点赞
         if(wx.getStorageSync('openId')){
           // 如果是已经登录未点赞 发送点赞请求 发openId
             wx.request({
              url: this.baseUrl + '/zan',
              method: 'POST',
              data: {
                _id:this.feedObj.contents[index]._id || '',
                opera: "insert",
                openid:wx.getStorageSync('openId') || '',
                code: '',
                name:wx.getStorageSync('userInfo').nickName || '💗'
              },
              header: {
                'Content-Type': 'application/json'
              },
              success: res => {
                  console.log('已登录点赞返回的数据res', res)
                  if(res.data.status){
                  wepy.showToast({
                  title: '点赞成功',
                  icon: 'none',
                  duration: 3000
                })
                // zan 列表中把自己的名字本地加入
                this.feedObj.contents[index].zan.push({'openid': this.openId, 'name': wx.getStorageSync('userInfo').nickName || '💗'})
                this.feedObj.contents[index].hasZan = !this.feedObj.contents[index].hasZan
                } else {
                  wepy.showToast({
                  title: '点赞失败',
                  icon: 'none',
                  duration: 3000
                  })
                }
                this.$apply()
              },
              fail: error => {
                console.log('已登录点赞失败', error)
                wepy.showToast({
                  title: '点赞失败',
                  icon: 'none',
                  duration: 3000
                })
              }
            })
         } else {
           // 未登录 发送点赞请求
           // 首先需要登录
            wepy.login({
             success: res => {
            this.code = res.code
             wx.request({
              url: this.baseUrl + '/zan',
              method: 'POST',
              data: {
                 _id:this.feedObj.contents[index]._id || '',
                opera: "insert",
                openid:'',
                code: this.code || '',
                name:wx.getStorageSync('userInfo').nickName || '💗'
              },
              header: {
                'Content-Type': 'application/json'
              },
              success: res => {
                  console.log('未登录无感登录点赞返回的数据res', res)
                   if(res.data.status){
                 wepy.showToast({
                  title: '点赞成功',
                  icon: 'none',
                  duration: 3000
                })
                // 把openid 存入storage中
                if(res.data.openid){
                 wx.setStorageSync('openId',res.data.openid)
                }
                // zan 列表中把自己的名字本地加入
                this.feedObj.contents[index].zan.push({'openid': res.data.openid|| '', 'name': '💗'})
                this.feedObj.contents[index].hasZan = !this.feedObj.contents[index].hasZan
                   } else {
                   showToast({
                    title: '点赞失败',
                  icon: 'none',
                  duration: 3000
                  })
                   }
                 
                this.$apply()
                //未登录直接刷新列表
              },
              fail: error => {
                console.log('无感知登录点赞失败', error)
                wepy.showToast({
                  title: '点赞失败',
                  icon: 'none',
                  duration: 3000
                })
                // mock的数据
                // this.feedObj.contents[index].zan.push({'openId': '', 'name': '💗'})
                // this.feedObj.contents[index].hasZan = !this.feedObj.contents[index].hasZan
                this.$apply()
              }
            })
            }
            })
         }
       }
     // this.feedObj.contents[index].hasZan= !this.feedObj.contents[index].hasZan
      },
       // 点击图片进行大图查看
      LookPhoto: function(item,e) {
        wx.previewImage({
          current: e.currentTarget.dataset.photurl,
          urls: item || []
        })
      },

  // 点击点赞的人
      TouchZanUser: function(e) {
        wx.showModal({
          title: e.currentTarget.dataset.name,
          showCancel: false
        })
      },

  // 删除朋友圈
      delete: function() {
        this.deletePiece()
      },
      deletePiece(){
        // 删除单条动态
         wx.request({
         url: this.baseUrl + '/delete',
         header: {
        'content-type': 'application/json' // 默认值
         },
        method: 'POST',
        success: res => {
        console.log('删除动态返回的数据', res)
         wx.showToast({
          title: '删除成功'
        })
         },
        fail: function (error) {
        wepy.hideLoading()
        console.error('删除单条数据失败', error)
        wepy.showToast({title: '删除数据失败'})
         }
       })
      },

  // 点击了点赞评论
      TouchDiscuss: function(index) {
       this.feedObj.contents[index].isShow= !this.feedObj.contents[index].isShow
      }
    }

    events = {
    }
  getFeed(){ 
    wx.request({
      url: this.baseUrl + '/get',
      header: {
        'content-type': 'application/json' // 默认值
      },
      method: 'GET',
      success: res => {
        console.log('获取的用户feed列表成功', res)
        if(res.data){
         this.feedObj = res.data
         this.feedObj.contents = this.feedObj.contents.length && this.feedObj.contents.map((item) => {
        if (item.publishTime) {
          item.publishTime = timestampToTime(item.publishTime)
        }
        item.isShow = false// 这个参数是默认不出展示box的
        // 还需要判断如果展示了box 展示的类型是点赞还是取消
        let hasZan = false
         hasZan = item.zan.length&&item.zan.some((one)=>{
               return one.openid === this.openId
         });
         if(hasZan) { 
           // 如果列表中已经存在你自己的赞了 那么就显示取消
           item.hasZan = true
         } else {
           // 没有匹配到 要么是没有登录 要么是登录了 但是确实没有你的赞 你需要进行点赞操作
           // 登录如何做 没有登录如何做
           item.hasZan = false
         }



        return item
      })
          this.$apply()
        }
        wepy.hideLoading()
        
      },
      fail: function (error) {
        wepy.hideLoading()
        console.error('获取用户feed列表失败', error)
        wepy.showToast({title: 'feed列表失败'})
      }
    })
  }
    onLoad() {
    }
    onShow(){
  // 获取列表的接口 发文章跳过来的操作
      // console.log(this.openId,"openId")
      this.getFeed()
    }
  }
</script>

